<p id="notice"><%= notice %></p>

<h1>My Events</h1>
<%= link_to 'Create an Event', new_event_path,
         :class=>"btn btn-default btn-primary" %>

<%= render 'events/tag_cloud' %>

<table class=" table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Agenda</th>
      <th>Address</th>
      <th>Organizer</th>
      <th>All Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date.strftime('%d/%m/%Y')%></td>
        <td><%= event.end_date.strftime('%d/%m/%Y')%></td>
        <td><%= event.location %></td>
        <td><%= event.agenda %></td>
        <td><%= event.address %></td>
        <td><%= event.organizer_id %></td>
        <td><% event.all_tags.split(',').map do |t| %>
          <%= (link_to t + ", ", tag_path(t))%>
          <% end %> </td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>